@{

    Layout = null;
}

<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <title>Login RConfig UI</title>
    <!-- CSS files -->
    <link href="~/css/tabler.min.css?1668287865" rel="stylesheet"/>
    <link href="~/css/tabler-flags.min.css?1668287865" rel="stylesheet"/>
    <link href="~/css/tabler-payments.min.css?1668287865" rel="stylesheet"/>
    <link href="~/css/tabler-vendors.min.css?1668287865" rel="stylesheet"/>
    <link href="~/css/demo.min.css?1668287865" rel="stylesheet"/>
    <style>
      import url('https://rsms.me/inter/inter.css');
      :root {
      	--tblr-font-sans-serif: Inter, -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif;
      }
    </style>
  </head>
  <body  class=" border-top-wide border-primary d-flex flex-column">
    <script src="~/js/demo-theme.min.js?1668287865"></script>
    <div class="page page-center">
      <div class="container container-tight py-2">
        <div class="text-center mb-4">
          <a href="." class="navbar-brand navbar-brand-autodark"><img src="./static/logo.svg" height="36" alt=""></a>
        </div>
        <div class="card card-md">
          <div class="card-body">
            <h2 class="h2 text-center mb-4">Login RConfig UI</h2>
            <form action="/Auth/Login" method="post" autocomplete="off" novalidate>
              <div class="mb-3">
                <label class="form-label">Username</label>
                            <input type="text" class="form-control" name="username" placeholder="Username" autocomplete="off">
              </div>
              <div class="mb-2">
                <label class="form-label">
                  Password                  
                </label>
                <div class="input-group input-group-flat">
                                <input type="password" name="password" class="form-control" placeholder="Password" autocomplete="off">
                 
                </div>
              </div>
            
              <div class="form-footer">
                <button type="submit" class="btn btn-primary w-100">Sign in</button>
              </div>
            </form>
          </div>
         
        </div>
      
      </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="~/js/tabler.min.js?1668287865" defer></script>
    <script src="~/js/demo.min.js?1668287865" defer></script>
  </body>
</html>